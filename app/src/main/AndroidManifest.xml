<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nhs3108.fhrm">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">

        <activity android:name=".activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.StaffActivity">
            <intent-filter>
                <action android:name="com.nhs3108.fhrm.activities.staff" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.StaffEditingActivity">
            <intent-filter>
                <action android:name="com.nhs3108.fhrm.activities.staffEditing" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.StaffAddingActivity">
            <intent-filter>
                <action android:name="com.nhs3108.fhrm.activities.staffAdding" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
